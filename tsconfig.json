{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "rootDir": "src/ts",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/ts/utils/*"]
    },
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src/ts/**/*", "src/types/**/*", "unused/safetyServiceTest.ts", "src/ts/services/bundleSender.ts", "unused/streamListener.ts", "src/types/json.d.ts"],
  "exclude": ["node_modules", "dist", "unused"]
}
