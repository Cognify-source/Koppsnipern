{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@raydium-io/raydium-sdk": ["src/types/raydium-sdk/index.d.ts"]
    },
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist"]
}
