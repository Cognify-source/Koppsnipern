{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@raydium-io/raydium-sdk": ["src/types/raydium-sdk.d.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "tests", "dist"]
}
